@model IEnumerable<OdeToBikes.Models.ManufacturerListViewModel>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Bicycle Archive</h1>
    <p class="lead">Who doesn't like bikes? It's a no brainer. It's an ode to bikes.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

@* using method="get" (read operation) puts the searchTerm in the query string,
    rather than using "post" (write operation), where it gets put into the HTTP message body *@
@*<form method="get">
    <input type="search" name="searchTerm"/>
    <input type="submit" value="Search By Manufacturer" />
</form>*@

@*Ajax makes an a-sync request that can draw only a portion of the screen, 
    whereas html.requestform makes a sync request and redraws the entire screen*@
@using (Ajax.BeginForm(
    new AjaxOptions
    {
        HttpMethod = "get",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "manufacturerList"
    }))
{
    <input type="search" name="searchTerm" />
    <input type="submit" value="Search By Manufacturer Name" />
}

@Html.Partial("_Manufacturers", Model)